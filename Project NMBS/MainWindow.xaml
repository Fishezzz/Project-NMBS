<Window x:Class="Project_NMBS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_NMBS"
        mc:Ignorable="d"
        Title="NMBS" Height="450" Width="800" WindowStartupLocation="CenterScreen" MinWidth="400" MinHeight="300">
    <Grid>
        <TabControl Margin="3,3,3,3">
            <TabItem Header="Agencies">
                <Grid Background="#FFE5E5E5">
                    <ListView Name="lvAgencies" Margin="0,0,0,0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="80" Header="ID" DisplayMemberBinding="{Binding Agency_Id}"/>
                                <GridViewColumn Width="80" Header="Name" DisplayMemberBinding="{Binding Agency_Name}"/>
                                <GridViewColumn Width="200" Header="URL" DisplayMemberBinding="{Binding Agency_Url}"/>
                                <GridViewColumn Width="100" Header="Timezone" DisplayMemberBinding="{Binding Agency_Timezone}"/>
                                <GridViewColumn Width="60" Header="Language" DisplayMemberBinding="{Binding Agency_Language}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Stops">
                <Grid Background="#FFE5E5E5">
                    <ListView Name="lvStops" Margin="0,0,0,0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="100" Header="ID" DisplayMemberBinding="{Binding Stop_Id}"/>
                                <GridViewColumn Width="200" Header="Name" DisplayMemberBinding="{Binding Stop_Name}"/>
                                <GridViewColumn Width="70" Header="Latitude" DisplayMemberBinding="{Binding Stop_Lat}"/>
                                <GridViewColumn Width="70" Header="Longtitude" DisplayMemberBinding="{Binding Stop_Long}"/>
                                <GridViewColumn Width="90" Header="Location Type" DisplayMemberBinding="{Binding Location_Type}"/>
                                <GridViewColumn Width="90" Header="Parent Station" DisplayMemberBinding="{Binding Parent_Station}"/>
                                <GridViewColumn Width="90" Header="Platform Code" DisplayMemberBinding="{Binding Platform_Code}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Routes">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Trips">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Stop Times">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Calendar">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Calendar Dates">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Transfers">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Stop Time Overrides">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Translations">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
