<Window x:Class="Project_NMBS.ResultRealTime"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_NMBS"
        mc:Ignorable="d"
        Title="" Height="400" Width="550"
        Name="wdResultRealTime">
    <Grid>
        <Label Name="lblInfo" Content="" VerticalAlignment="Top" Height="40" Margin="10,0"/>
        <ListView Name="lvResult" Margin="10,40,10,10.4">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Station" Width="200" DisplayMemberBinding="{Binding Item1}"/>
                    <GridViewColumn Header="Arrival" Width="150" DisplayMemberBinding="{Binding Item2}"/>
                    <GridViewColumn Header="Departure" Width="150" DisplayMemberBinding="{Binding Item3}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
